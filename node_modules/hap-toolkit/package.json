{
  "name": "hap-toolkit",
  "version": "0.0.36",
  "description": "A command line toolkit for developing Quick Apps.",
  "scripts": {
    "lint": "eslint src && eslint entry",
    "clear": "rm -rf dist/* && rm -rf lib/*",
    "build": "npm run lint && node_modules/babel-cli/bin/babel.js src --out-dir lib --copy-files",
    "release": "node uglify.js",
    "release:copy": "cp -Rf README.md package.json CHANGELOG.md templates dist/ && mkdir dist/tools/  && mv dist/server dist/tools/  && cp -Rf entry/* dist/tools/"
  },
  "dependencies": {
    "fs-extra": "^2.0.0",
    "prompt": "^1.0.0",
    "semver": "^5.1.0",
    "commander": "~2.14.1",
    "yargs": "^6.6.0",
    "chalk": "^2.3.0",
    "shelljs": "^0.8.1",
    "cross-env": "^5.1.4",
    "chrome-simple-launcher": "^0.0.7",
    "adb-driver": "0.0.6",
    "qr-image": "^3.2.0",
    "qrcode-terminal": "^0.11.0",
    "tar": "^3.1.5",
    "aaptjs": "^1.3.0",
    "jszip": "^3.1.5",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.9.2",
    "babel-template": "^6.24.1",
    "babel-traverse": "^6.24.1",
    "babel-types": "^6.24.1",
    "babylon": "^6.17.0",
    "babylon-jsx": "^1.0.0",
    "crypto-js": "^3.1.9-1",
    "css": "~2.2.1",
    "escodegen": "~1.7.1",
    "eslint": "^2.13.1",
    "esprima": "~2.7.0",
    "hash-sum": "^1.0.2",
    "jsrsasign": "^7.1.2",
    "jsrsasign-util": "^1.0.0",
    "loader-utils": "~0.2.14",
    "moment": "^2.22.2",
    "md5": "^2.1.0",
    "parse5": "^3.0.0",
    "source-map": "^0.5.6"
  },
  "bin": {
    "hap": "bin/hap",
    "mix": "bin/mix"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "uglify-js": "^2.7.5",
    "eslint": "^2.13.1"
  }
}